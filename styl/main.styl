body
  padding-top 20px

#search-form
  margin 40px 0

.results
  border-top 1px dotted #ccc
  padding-top 35px

  dl
    dt, dd
      padding-bottom 10px

  dd
    &.loaded
      .spinner
        display none

      .result
        display inherit !important

    .spinner
      width 22px
      height 22px

    .result
      display none

      table
        margin-top 10px

#fpds-list
  list-style none
  margin 15px 0 0 0
  padding 0
  border-top 1px dotted #ccc

  li
    border-bottom 1px dotted #ccc
    padding-top 10px

    dl
      margin-bottom 14px